# Auto-detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf

# Shell scripts
*.sh text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# Markdown
*.md text eol=lf

# Config files
*.toml text eol=lf
*.ini text eol=lf
.env* text eol=lf

# Exclude from archive
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore

